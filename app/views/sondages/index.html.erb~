  <%= link_to 'Non', { :action => 'vote', :id => @project[:id],:id_sondage => sondage[:id], :reponse => 'non' }, :method => :post %> (<%= sondage.non %>) /
  <%= link_to 'Editer', { :action => 'editer',:id => @project[:id], :id_sondage => sondage[:id] }, :method => :get %> /
  <%= link_to 'Supprimer', { :action => 'supprimer',:id => @project[:id], :id_sondage => sondage[:id] }, :method => :post, data: { confirm: t('are_you_sure') } class: 'icon icon-del' %>
  </p>
<% end %>
